@model LibraryManagementSystem.Models.Book

<div class="modal fade" id="entityModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="entityForm" method="post" action="@(
          Model.BookId == 0 ? Url.Action("Create","Books") : Url.Action("Edit","Books")
      )">
        <div class="modal-header">
          <h5 class="modal-title">@((Model.BookId==0) ? "Create Book" : "Edit Book")</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          @if (Model.BookId != 0)
          {
            <input type="hidden" name="BookId" value="@Model.BookId" />
          }
          <div class="mb-3">
            <label>Title</label>
            <input name="Title" class="form-control" value="@Model.Title" required />
          </div>
          <div class="mb-3">
            <label>Author</label>
            <select name="AuthorId" class="form-control" required>
              <option value="">--Select--</option>
              @foreach (var a in (SelectList)ViewBag.Authors) {
                  <select asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors, "Id", "Name"))" class="form-control"></select>

              }
            </select>
          </div>
          <div class="mb-3">
            <label>Genre</label>
            <select name="GenreId" class="form-control" required>
              <option value="">--Select--</option>
              @foreach (var g in (SelectList)ViewBag.Genres) {
                  <select asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors, "Id", "Name"))" class="form-control"></select>

              }
            </select>
          </div>
          <div class="mb-3">
            <label>Price</label>
            <input name="Price" type="number" step="0.01" class="form-control" value="@Model.Price" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- bootstrap modal show script (bootstrap must be in layout) -->
<script>
    var modal = new bootstrap.Modal(document.getElementById('entityModal'));
    modal.show();
</script>
