@page
@model OnlineBookstore.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Create Book";
}
<h2>Add New Book</h2>


<form method="post">
    <div>
        <label>Title</label>
        <input asp-for="Book.Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Book.Author" />
    </div>
    <div>
        <label>ISBN</label>
        <input asp-for="Book.ISBN" />
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Book.Price" />
    </div>
    <button type="submit">Save</button>
</form>
