@{
}
@model IEnumerable<OnlineBookstore.Models.Book>

<h2>Books List</h2>
<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.ISBN</td>
            <td>@book.Price</td>
            <td><a asp-action="Details" asp-route-id="@book.Id">View</a></td>
        </tr>
    }
</table>

